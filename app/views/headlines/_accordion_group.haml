.accordion-group
  .accordion-heading
    %a.accordion-toggle{'data-toggle'=>'collapse','data-parent'=>".espn-accordion", :href=>"#collapse_#{proleague}_#{accordion_group_counter}"}= accordion_group.title
  .accordion-body.collapse{:id=>"collapse_#{proleague}_#{accordion_group_counter}"  }
    .accordion-inner
      %div
        = accordion_group.description
        %a.btn{:href => accordion_group.web_url} Read more &raquo;
      %span.label.label-info= accordion_group.source
      %span.age= time_ago_in_words(accordion_group.last_modified) + ' ago'
